 <p id="notice"><%= notice %></p>
 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
       <h2>Editing Book</h2>
       <%= form_with model: @book do |f| %>
       <div class="form-group">
         <ladel for="inputTitle">Title</ladel>
          <%= f.string_field :title, autofocus: true, id:"inputTitle", placeholder:"Title", class: "form-control" %>
       </div>
       
       <div class="form-group">
         <ladel for="inputOpinion">Opinion</ladel>
         <%= f.text_field :body, autofocus: true, id:"inputOpinion",placeholder:"Opinion", class: "form-control" %>
       </div>
       
       <div class="form-group">
         <%= f.submit "Update Book", class: "btn btn-success" %>
       </div>
       <% end %>
       <%= link_to "Show", book_path %>
       |
       <%= link_to "Back", books_path %>
     </div>
   </div>
 </div>
