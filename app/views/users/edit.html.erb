<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <ladel for="inputname">Name</ladel>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <ladel for="inputimage">Image</ladel>
        <%= f.file_field :image, class: "form-control-file" %>
      </div>
      
      <div class="form-group">
        <ladel for="inputintroduction">Introduction</ladel>
        <%= f.text_field :Introduction, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
