<%= render "books/list", book: @booknew,  user: @user %>

<div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
        <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
        </thead>
    
    <tbody>
      <% @book.each do |book| %>
        <tr>
            <td>
                <%= link_to user_path(book.user.id) do %>
                <%= image_tag @user.get_image(100,100) %>
                <% end %>
            </td>

            <td>
                <%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
                <% end %>
            </td>

            <td>
                <%= book.body %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>
</div>
</div>
</div>