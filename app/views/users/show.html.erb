<%= render "list", book: @books,  user: @user %>

<div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
        </tr>
    </table>
    <tbody>
      <% @book.each do |book| %>
        <tr>
            <td>
                <%= image_tag user.get_image(100,100) %>
            </td>

            <td>
                <%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
                <% end %>
            </td>

            <td>
                <%= book.body %>
            </td>
        </tr>
        <% end %>
    </tbody>
</div>